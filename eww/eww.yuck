(include "widgets/bar.yuck")
(include "widgets/calender.yuck")

(defwindow bar
  :monitor '[0,1]'
  :geometry (geometry :x "0%"
    :y "0.5%"
    :width "98%"
    :height "3%"
  :anchor "top center")
  :stacking "bottom"
  :windowtype "dock"
  :exclusive true
  (bar))

(defwindow calendar
  :monitor '[0,1]'
  :geometry (geometry :x "0%"
    :y "20%"
    :anchor "top center"
    :width "270px"
  :height "60px")
  (cal))
